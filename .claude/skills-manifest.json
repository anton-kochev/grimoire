{
  "version": "2.0.0",
  "config": {
    "weights": {
      "keywords": 1.0,
      "file_extensions": 1.5,
      "patterns": 2.0,
      "file_paths": 2.5
    },
    "activation_threshold": 3.0,
    "pretooluse_threshold": 2.0,
    "log_path": ".claude/logs/skill-router.log"
  },
  "skills": [
    {
      "path": ".claude/skills/claudify:dotnet-unit-testing",
      "name": "DotNet Unit Testing",
      "description": "Unit testing for C#/.NET projects",
      "triggers": {
        "keywords": [
          "unittest",
          "xunit",
          "nunit",
          "tdd",
          "moq",
          "nsubstitute"
        ],
        "file_extensions": [
          ".cs"
        ],
        "patterns": [
          "write.*test",
          "add.*test",
          "create.*test",
          "unit.*test",
          "dotnet.*test"
        ],
        "file_paths": [
          "tests/**",
          "test/**",
          "Tests/**",
          "Test/**"
        ]
      }
    },
    {
      "path": ".claude/skills/claudify:readme-guide",
      "name": "README Guide",
      "description": "Create and review README files",
      "triggers": {
        "keywords": [
          "readme",
          "documentation"
        ],
        "patterns": [
          "create.*readme",
          "write.*readme",
          "update.*readme",
          "change.*readme",
          "improve.*readme",
          "check.*readme"
        ],
        "file_paths": [
          "**/README.md"
        ]
      }
    },
    {
      "path": ".claude/skills/claudify:context-file-guide",
      "name": "Context File Guide",
      "description": "CLAUDE.md project context files",
      "triggers": {
        "keywords": [
          "claude.md",
          "context"
        ],
        "patterns": [
          "create.*claude",
          "update.*claude\\.md"
        ],
        "file_paths": [
          "**/CLAUDE.md"
        ]
      }
    },
    {
      "path": ".claude/skills/modern-typescript",
      "name": "Modern TypeScript",
      "description": "Modern TypeScript best practices and type system patterns",
      "triggers": {
        "keywords": [
          "typescript",
          "ts",
          "tsconfig"
        ],
        "file_extensions": [
          ".ts",
          ".tsx",
          ".mts",
          ".cts"
        ],
        "patterns": [
          "type.*safe",
          "strict.*mode",
          "discriminated.*union",
          "branded.*type",
          "modern.*typescript"
        ],
        "file_paths": [
          "**/tsconfig*"
        ]
      }
    },
    {
      "path": ".claude/skills/claudify:dotnet-feature-workflow",
      "name": "DotNet Feature Workflow",
      "description": "End-to-end .NET feature development",
      "triggers": {
        "keywords": [
          "feature",
          "workflow",
          "implement"
        ],
        "patterns": [
          "build.*feature",
          "implement.*feature",
          "create.*feature",
          "new.*feature",
          "dotnet.*feature"
        ]
      }
    }
  ],
  "agents": {
    "claudify:csharp-coder": {
      "always_skills": [],
      "compatible_skills": [
        "DotNet Unit Testing",
        "Conventional Commit"
      ]
    },
    "claudify:dotnet-architect": {
      "always_skills": [],
      "compatible_skills": [
        "DotNet Unit Testing",
        "DotNet Feature Workflow",
        "Conventional Commit"
      ]
    },
    "claudify:dotnet-unit-test-writer": {
      "always_skills": [
        "DotNet Unit Testing"
      ],
      "compatible_skills": []
    }
  }
}
